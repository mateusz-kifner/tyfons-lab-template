{
  "$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noArrayIndexKey": "off",
        "noExplicitAny": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "warn",
        "noConstantCondition": "warn"
      },
      "style": {
        "useNodejsImportProtocol": "off"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "warn",
          "options": {
            "attributes": [
              "classList"
            ],
            "functions": [
              "clsx",
              "cva",
              "tw"
            ]
          }
        }
      }
    },
    "ignore": [
      "node_modules/*",
      ".next/*",
      ".uploads/*",
      ".public/*",
      ".expo/*",
      ".expo-shared/*",
      ".output/*",
      ".nitro/*",
      "dist/*"
    ]
  },
  "formatter": {
    "enabled": true,
    "ignore": [
      "node_modules/*",
      ".next/*",
      ".uploads/*",
      ".public/*",
      ".expo/*",
      ".expo-shared/*",
      ".output/*",
      ".nitro/*",
      "dist/*"
    ],
    "indentStyle": "space",
    "indentWidth": 2
  }
}